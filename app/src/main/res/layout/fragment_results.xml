<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mid"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lorabold"
        android:text="Quiz Results"
        android:textSize="@dimen/big"
        android:textStyle="bold" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mid" />

    <!--    show the quiz set you took -->
    <!--    show how many mistakes -->
    <!--    show how many correct  -->
    <!--    good or bad message  -->
    <!--    and ovverride on back pressed  -->

    <LinearLayout
        android:id="@+id/privacypolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/quiznametaken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mid"
            android:layout_marginBottom="@dimen/mid"
            android:textSize="@dimen/mid" />

        <TextView
            android:id="@+id/mistakesnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mid"
            android:layout_marginBottom="@dimen/mid"
            android:textSize="@dimen/mid" />

        <TextView
            android:id="@+id/correctnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mid"
            android:layout_marginBottom="@dimen/mid"
            android:textSize="@dimen/mid" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mid"
            android:layout_marginBottom="@dimen/mid"
            android:fontFamily="@font/lorabold"
            android:textSize="@dimen/mid" />


    </LinearLayout>
</LinearLayout>