<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="kourtis.quadrum.philosophito.ui.main.AboutActivitiy">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:theme="@style/Theme.MyApplication.AppBarOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoimg"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@string/logo"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/newlogotrans" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toStartOf="@id/infoBtn"
                    android:layout_toEndOf="@id/logoimg"
                    android:fontFamily="@font/lorabold"
                    android:gravity="center"
                    android:minHeight="?actionBarSize"
                    android:padding="@dimen/small"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/infoBtn"
                    android:layout_width="45dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/about"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icons8_info_24" />
            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/me"
            android:textAlignment="textStart"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/mid"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="@dimen/big"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:inputType="textMultiLine"
                android:text="@string/about_description"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sources_used"
                android:textSize="@dimen/big"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:autoLink="all"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:inputType="textMultiLine"
                android:text="@string/wikipedia_link"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_developer_details"
                android:textSize="@dimen/big"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="@string/about_developer_name"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/emailme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:autoLink="email"
                android:text="@string/about_developer_email"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/phoneme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:autoLink="phone"
                android:text="@string/about_developer_phone"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_contributors"
                android:textSize="@dimen/big"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="@string/about_contributors_elias"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_developer_social"
                android:textSize="@dimen/big"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/small"
                android:gravity="start"
                android:orientation="horizontal"
                android:textAlignment="viewStart">

                <ImageView
                    android:id="@+id/facebookbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:contentDescription="@string/logo"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/facebooklogo" />

                <ImageView
                    android:id="@+id/linkedinbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:contentDescription="@string/logo"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/linkeditlogo" />

                <ImageView
                    android:id="@+id/twitterbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:contentDescription="@string/logo"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/twitterlogo" />

                <ImageView
                    android:id="@+id/instagrambtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:contentDescription="@string/logo"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/instagramlogo" />

                <ImageView
                    android:id="@+id/youtubebtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:contentDescription="@string/logo"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/youtubelogo" />

                <ImageView
                    android:id="@+id/soundcloudbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:contentDescription="@string/logo"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/soundcloudlogo" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>